<div class="container">
  <div class="container page-header">
    <h1>Updating...</h1>
  </div>

  <%= form_for @user, method: :patch do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>

    <%= f.label :contact_no %>
    <%= f.telephone_field :contact_no, class: 'form-control' %>

    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
    <br>

    <%= f.button "Save changes", class: 'btn btn-lg btn-primary' %>
  <% end %>
