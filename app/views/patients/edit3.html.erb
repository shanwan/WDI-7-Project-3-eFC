<div class="container">
  <div class="page header">
    <h1>Update Next-of-kin</h1>
  </div> <br>

  <%= form_for :patient_record, url: update3_patient_path(current_user.id), method: "Patch" do |f| %>

  <%= f.label :next_of_kin %>
  <%= f.text_field :next_of_kin, class: 'form-control' %>

  <%= f.label :next_of_kin_email %>
  <%= f.email_field :next_of_kin_email, class: 'form-control' %>

  <%= f.label :next_of_kin_contact %>
  <%= f.text_field :next_of_kin_contact, class: 'form-control' %>
  <br>
  <%= f.submit "Save Changes", class: "btn btn-primary btn-lg"%>
  <%end%>

<br>
<%= link_to 'Personal Details Page', user_path(current_user.id), class:"btn btn-lg btn-primary" %>
</div>
